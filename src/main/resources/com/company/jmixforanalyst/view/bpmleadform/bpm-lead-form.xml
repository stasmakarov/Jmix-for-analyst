<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://bpmLeadForm.title">
    <data>
        <instance id="leadDc"
                  class="com.company.jmixforanalyst.entity.Lead">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <formLayout id="form" dataContainer="leadDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="idField" property="id"/>
            <textField id="customerField" property="customer"/>
            <textField id="emailField" property="email"/>
            <textArea id="requestField" height="9.5em" property="request"/>
            <select id="sizeField" property="size"/>
            <textField id="budgetField" property="budget"/>
            <textField id="performerField" property="performer"/>
        </formLayout>
        <formLayout>
            <textField datatype="string" id="commentField" label="msg://bpmLeadForm.variable.comment" required="true"/>
        </formLayout>
        <hbox id="actionsPanel">
            <button id="completeBtn" icon="CHECK" text="msg://bpmLeadForm.outcome.complete" themeNames="primary"/>
        </hbox>
    </layout>
</view>